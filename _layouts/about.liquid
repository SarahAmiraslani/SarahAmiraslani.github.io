---
layout: default
---
<div class="about-page">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.title == 'blank' %}
        <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }}
        {{ site.last_name }}
      {% else %}
        {{ site.title }}
      {% endif %}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    {% if page.profile %}
      <div class="profile float-{% if page.profile.align == 'left' %}left{% else %}right{% endif %}">
        {% if page.profile.image %}
          {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image
            cache_bust=true
          %}queries
        {% endif %}
        {% if page.profile.more_info %}
          <div class="more-info">{{ page.profile.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="clearfix">{{ content }}</div>

    <!-- Projects -->
    {% if site.data.projects %}
      <h2>
        <a href="{{ '/projects/' | relative_url }}" style="color: inherit">{{ 'selected projects' | capitalize }}</a>
      </h2>
      <ul class="card-text font-weight-light list-group list-group-flush">
        {% assign sorted_projects = site.data.projects | sort: 'releaseDate' | reverse %}
        {% for project in sorted_projects limit: 4 %}
          <li class="list-group-item project-item">
            <div class="row">
              <div class="col-3 text-center date-column">
                <!-- Changed col-2 to col-3 -->
                <div class="image-wrapper">
                  <img src="{{ project.visualization }}" alt="Project visualization" class="project-gif img-fluid">
                </div>
              </div>
              <div class="col-9 mt-2 mt-md-0">
                <!-- Changed col-10 to col-9 -->
                <div class="project-description">
                  <h6 class="title font-weight-bold ml-1 ml-md-0">
                    <a href="{{ project.url }}">{{ project.title }}</a>
                  </h6>
                  <p>{{ project.description }}</p>
                  <p><strong>Technologies used:</strong> {{ project.technologies | join: ', ' }}</p>
                </div>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    <!-- Latest posts -->
    {% if site.latest_posts.enabled %}
      <h2>
        <a href="{{ '/blog/' | relative_url }}" style="color: inherit">Latest blog posts</a>
      </h2>
      {% include latest_posts.liquid %}
    {% endif %}

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div class="contact-note">{{ site.contact_note }}</div>
      </div>
    {% endif %}
  </article>
</div>

<style>
  /* Ensure the list items have consistent height and width */
  .project-item {
    display: flex;
    align-items: center;
    height: 200px; /* Set a fixed height */
    border: 1px solid #ddd; /* Optional: Add border for better visibility */
    margin-bottom: 10px; /* Optional: Add space between items */
    background-color: inherit;
  }

  /* Ensure all columns are equally spaced and aligned */
  .row {
    display: flex;
    width: 100%;
    background-color: inherit;
  }

  .col-2,
  .col-10 {
    display: flex;
    align-items: center;
    background-color: inherit;
  }

  .col-2 {
    width: 20%; /* Adjust width as per the number of columns */
    justify-content: center;
    color:;
  }

  .col-10 {
    width: 80%; /* Adjust width as per the number of columns */
    justify-content: center;
    flex-direction: column;
  }

  /* Ensure images fit well within their containers */
  .image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
  }

  .image-wrapper img {
    width: 200px;
    height: 175px;
    object-fit: cover;
  }

  /* Additional styling for the project description */
  .project-description {
    width: 100%;
  }
</style>
